  "namespace": {
    "fb": "https://onedm.org/exploratory/onefb/"
  }, 
  "defaultNamespace": "fb", 

  "stcStateMachine": {
    "ConditionalObserveFilter": {
      "stcStates": {
        "Init": [
          { "Band": "#/sdfProperty/Band" },
          { "Pmin": "#/sdfProperty/Pmin" },
          { "Pmax": "#/sdfProperty/Pmax" },
          { "St": "#/sdfProperty/St" },
          { "Lt": "#/sdfProperty/Lt" },
          { "Gt": "#/sdfProperty/Gt" },
          { "LastReportedValue": "#/sdfProperty/CurrentValue" },
          { "LastReportTime": "#/sdfProperty/SampleTime" },
          { "Value": "#/sdfProperty/CurrentValue" },
          { "SampleTime": "#/sdfProperty/SampleTime" },
          { "Notify": true }
        ],
        "Sample": [
          { "Value": "#/sdfProperty/CurrentValue" },
          { "SampleTime": "#/sdfProperty/SampleTime" },
          { "PminEx": "SampleTime - LastReportTime >= Pmin" },
          { "PmaxEx": "SampleTime - LastReportTime > Pmax " },
          { "LtEx": "Value < Lt ^ LastReportedValue < Lt" },
          { "GtEx": "Value > Gt ^ LastReportedValue > Gt" },
          { "StEx": "abs( Value - LastReportedValue ) >= St" },
          { "InBand": "( Gt <= Value && Value <= Lt ) || ( Value >= Gt && Gt >= Lt ) || ( Value <= Lt && Lt <= Gt )" },
          { "Notify": "( PminEx && ( !Band && ( GtEx || LtEx || StEx || PmaxEx )) || ( Band && InBand && ( StEx || PmaxEx )))" },
          { "Wait": true }
        ],
        "Wait": [
          { "Sample": "#/sdfEvent/CurrentValueSample"}
        ],
        "Notify": [
          { "ReportValue": { "CurrentValue": "Value", "SampleTime": "SampleTime" } },
          { "LastReportedValue": "Value" },
          { "LastReportTime": "SampleTime" },
          { "Wait": true }
        ],
        "Stop": [
        ]
      },
      "stcData": {
        "SampleTime": { "sdfRef": "fb:#/sdfData/DateTimeType" },
        "LastReportTime": { "sdfRef": "fb:#/sdfData/DateTimeType" },
        "Pmin": { "sdfRef": "fb:#/sdfData/DurationType" }, 
        "Pmax": { "sdfRef": "fb:#/sdfData/DurationType" },
        "Value": { "sdfRef": "fb:#/sdfData/ValueType" }, 
        "LastReportedValue": { "sdfRef": "fb:#/sdfData/ValueType" }, 
        "St": { "sdfRef": "fb:#/sdfData/ValueType" }, 
        "Lt": { "sdfRef": "fb:#/sdfData/ValueType" }, 
        "Gt": { "sdfRef": "fb:#/sdfData/ValueType" },
        "Band": { "type": "boolean" }, 
        "PminEx": { "type": "boolean" }, 
        "PmaxEx": { "type": "boolean" }, 
        "LtEx": { "type": "boolean" }, 
        "GtEx": { "type": "boolean" }, 
        "StEx": { "type": "boolean" }
      },
      "stcStateTransitionTrigger": {
        "stcStart": "Init",
        "stcStop": "Stop",
        "Stop": "Stop",
        "Sample": "Sample",
        "Notify": "Notify",
        "Wait": "Wait"
      },
      "stcSetter": { 
        "ReportValue": "#/sdfEvent/ReportValue" 
      }
    }
  }
}
